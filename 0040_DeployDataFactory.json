{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory Name",
            "defaultValue": "AzureDataFactoryDemo-SqlSpSink-Data-Factory"
        },
        "SourceDatabase_connectionString": {
            "type": "securestring",
            "metadata": "Secure string for 'connectionString' of 'SourceDatabase'"
        },
        "TargetDatabase_connectionString": {
            "type": "securestring",
            "metadata": "Secure string for 'connectionString' of 'TargetDatabase'"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "[concat(parameters('factoryName'), '/SourceDatabase')]",
            "type": "Microsoft.DataFactory/factories/linkedServices",
            "apiVersion": "2018-06-01",
            "properties": {
                "annotations": [],
                "type": "AzureSqlDatabase",
                "typeProperties": {
                    "connectionString": "[parameters('SourceDatabase_connectionString')]"
                }
            },
            "dependsOn": []
        },
        {
            "name": "[concat(parameters('factoryName'), '/Source_dbo_Employees')]",
            "type": "Microsoft.DataFactory/factories/datasets",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "SourceDatabase",
                    "type": "LinkedServiceReference"
                },
                "annotations": [],
                "type": "AzureSqlTable",
                "schema": [
                    {
                        "name": "id",
                        "type": "int",
                        "precision": 10
                    },
                    {
                        "name": "firstName",
                        "type": "varchar"
                    },
                    {
                        "name": "lastName",
                        "type": "varchar"
                    }
                ],
                "typeProperties": {
                    "schema": "dbo",
                    "table": "Employees"
                }
            },
            "dependsOn": [
                "[concat(variables('factoryId'), '/linkedServices/SourceDatabase')]"
            ]
        },
        {
            "name": "[concat(parameters('factoryName'), '/TargetDatabase')]",
            "type": "Microsoft.DataFactory/factories/linkedServices",
            "apiVersion": "2018-06-01",
            "properties": {
                "annotations": [],
                "type": "AzureSqlDatabase",
                "typeProperties": {
                    "connectionString": "[parameters('TargetDatabase_connectionString')]"
                }
            },
            "dependsOn": []
        },
        {
            "name": "[concat(parameters('factoryName'), '/Target_dim_Employees')]",
            "type": "Microsoft.DataFactory/factories/datasets",
            "apiVersion": "2018-06-01",
            "properties": {
                "linkedServiceName": {
                    "referenceName": "TargetDatabase",
                    "type": "LinkedServiceReference"
                },
                "annotations": [],
                "type": "AzureSqlTable",
                "schema": [],
                "typeProperties": {
                    "schema": "dim",
                    "table": "Employee"
                }
            },
            "dependsOn": [
                "[concat(variables('factoryId'), '/linkedServices/TargetDatabase')]"
            ]
        },
        {
            "name": "[concat(parameters('factoryName'), '/Merge Source Employees to Target Employees')]",
            "type": "Microsoft.DataFactory/factories/pipelines",
            "apiVersion": "2018-06-01",
            "properties": {
                "activities": [
                    {
                        "name": "Log Start of Employees Sync",
                        "type": "SqlServerStoredProcedure",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "storedProcedureName": "[[Audit].[InsertOperationsEventLog]",
                            "storedProcedureParameters": {
                                "ErrorMessage": {
                                    "value": null,
                                    "type": "String"
                                },
                                "ErrorNumber": {
                                    "value": null,
                                    "type": "Int32"
                                },
                                "EventState": {
                                    "value": "Information",
                                    "type": "String"
                                },
                                "SourceName": {
                                    "value": "Merge Source Employees to Target Employees",
                                    "type": "String"
                                },
                                "SourceType": {
                                    "value": "Data Factory Pipeline",
                                    "type": "String"
                                },
                                "StatusMessage": {
                                    "value": "Start of Employees Sync",
                                    "type": "String"
                                }
                            }
                        },
                        "linkedServiceName": {
                            "referenceName": "TargetDatabase",
                            "type": "LinkedServiceReference"
                        }
                    },
                    {
                        "name": "Log Finish of Employees Sync",
                        "type": "SqlServerStoredProcedure",
                        "dependsOn": [
                            {
                                "activity": "Merge Source Employee  to Target Employee",
                                "dependencyConditions": [
                                    "Succeeded"
                                ]
                            }
                        ],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "storedProcedureName": "[[Audit].[InsertOperationsEventLog]",
                            "storedProcedureParameters": {
                                "ErrorMessage": {
                                    "value": null,
                                    "type": "String"
                                },
                                "ErrorNumber": {
                                    "value": null,
                                    "type": "Int32"
                                },
                                "EventState": {
                                    "value": "Success",
                                    "type": "String"
                                },
                                "SourceName": {
                                    "value": "Merge Source Employees to Target Employees",
                                    "type": "String"
                                },
                                "SourceType": {
                                    "value": "Data Factory Pipeline",
                                    "type": "String"
                                },
                                "StatusMessage": {
                                    "value": "Finished Employees Sync",
                                    "type": "String"
                                }
                            }
                        },
                        "linkedServiceName": {
                            "referenceName": "TargetDatabase",
                            "type": "LinkedServiceReference"
                        }
                    },
                    {
                        "name": "Log Error",
                        "type": "SqlServerStoredProcedure",
                        "dependsOn": [
                            {
                                "activity": "Merge Source Employee  to Target Employee",
                                "dependencyConditions": [
                                    "Failed"
                                ]
                            }
                        ],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "storedProcedureName": "[[Audit].[InsertOperationsEventLog]",
                            "storedProcedureParameters": {
                                "ErrorMessage": {
                                    "value": {
                                        "value": "@activity('Merge Source Employee  to Target Employee').error.message",
                                        "type": "Expression"
                                    },
                                    "type": "String"
                                },
                                "ErrorNumber": {
                                    "value": null,
                                    "type": "Int32"
                                },
                                "EventState": {
                                    "value": "Success",
                                    "type": "String"
                                },
                                "SourceName": {
                                    "value": "Merge Source Employees to Target Employees",
                                    "type": "String"
                                },
                                "SourceType": {
                                    "value": "Data Factory Pipeline",
                                    "type": "String"
                                },
                                "StatusMessage": {
                                    "value": "Finished Employees Sync",
                                    "type": "String"
                                }
                            }
                        },
                        "linkedServiceName": {
                            "referenceName": "TargetDatabase",
                            "type": "LinkedServiceReference"
                        }
                    },
                    {
                        "name": "Merge Source Employee  to Target Employee",
                        "type": "Copy",
                        "dependsOn": [
                            {
                                "activity": "Log Start of Employees Sync",
                                "dependencyConditions": [
                                    "Succeeded"
                                ]
                            }
                        ],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false,
                            "secureInput": false
                        },
                        "userProperties": [],
                        "typeProperties": {
                            "source": {
                                "type": "AzureSqlSource"
                            },
                            "sink": {
                                "type": "AzureSqlSink",
                                "sqlWriterStoredProcedureName": "[[dim].[Load_Employee]",
                                "sqlWriterTableType": "dim.EmployeeType",
                                "storedProcedureTableTypeParameterName": "Employee"
                            },
                            "enableStaging": false
                        },
                        "inputs": [
                            {
                                "referenceName": "Source_dbo_Employees",
                                "type": "DatasetReference"
                            }
                        ],
                        "outputs": [
                            {
                                "referenceName": "Target_dim_Employees",
                                "type": "DatasetReference"
                            }
                        ]
                    }
                ],
                "annotations": []
            },
            "dependsOn": [
                "[concat(variables('factoryId'), '/linkedServices/TargetDatabase')]",
                "[concat(variables('factoryId'), '/datasets/Source_dbo_Employees')]",
                "[concat(variables('factoryId'), '/datasets/Target_dim_Employees')]"
            ]
        }
    ]
}